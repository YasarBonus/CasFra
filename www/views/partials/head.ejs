    <script>

      // get users language from browser
      var userLang = navigator.language || navigator.userLanguage;
      console.log('User language:', userLang);

      // check if user has custom language set in local storage
      if (localStorage.getItem('userLang')) {
        var userLang = localStorage.getItem('userLang');
        console.log('User language from local storage:', userLang);
      } else {
        localStorage.setItem('userLang', userLang);
      }

      console.log("User language is now set to:", userLang);
      const apiUrl = "https://api.yasarbonus.com";

      fetch(`${apiUrl}/api/website?locale=${userLang}&populate=*`)
        .then(response => response.json())
        .then(data => {
          document.getElementById('website-title').innerText = data.data.attributes.Title;
          document.getElementById('website-description').content = data.data.attributes.Description;
          document.getElementById('website-keywords').content = data.data.attributes.Keywords;
          document.getElementById('website-favicon').href = apiUrl + data.data.attributes.Favicon.data.attributes.url;
          document.getElementById('website-logo').src = apiUrl + data.data.attributes.Logo.data.attributes.url;
        })
        .catch(error => {
          console.error('Error fetching metadata:', error);
        });
    </script>
