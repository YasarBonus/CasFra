        <script>
        // ...

        // Get the table names when the page loads
            function refreshTableData() {
            $('#faqBackupList').empty();
            $('#faqBackupsDataModal').hide();
                $.ajax({
                    url: '/api/faq/backup/get',
                    type: 'GET',
                    success: function(result) {
                        // Add a list item and restore and delete buttons for each table
                        result.forEach(table => {
                            $('#faqBackupList').append(`
                                <li>
                                    <span style="font-size: 16px;">${table}</span>
                                    <br>
                                    <button class="ui tiny green button showFaqBackupDataButton" data-table="${table}">Preview</button>
                                    <button class="ui tiny blue button restoreFaqBackupButton" data-table="${table}">Restore</button>
                                    <button class="ui tiny red button deleteFaqBackupButton" data-table="${table}">Delete</button>
                                </li>
                            `);
                        });

                        // Add an event listener for the restore buttons
                        $('.restoreFaqBackupButton').on('click', function() {
                            const table = $(this).data('table');

                            // Show a confirmation dialog
                            if (confirm('Are you sure you want to restore the FAQ backup?')) {
                                $.ajax({
                                    url: '/api/faq/backup/restore',
                                    type: 'POST',
                                    data: { table: table },
                                    success: function(result) {
                                        // Do something with the result
                                        alert('FAQ Data restored!');
                                        location.reload(); // Reload the page
                                    }
                                });
                            }
                        });

                        // Add an event listener for the delete buttons
                        $('.deleteFaqBackupButton').on('click', function() {
                            const table = $(this).data('table');

                            // Show a confirmation dialog
                            if (confirm('Are you sure you want to delete the FAQ backup?')) {
                                $.ajax({
                                    url: '/api/faq/backup/delete',
                                    type: 'POST',
                                    data: { table: table },
                                    success: function(result) {
                                        // Do something with the result
                                        refreshTableData();
                                    }
                                });
                            }
                        });

                        // Add an event listener for the show data buttons
                        $('.showFaqBackupDataButton').on('click', function() {
                            const table = $(this).data('table');

                            // Show the table name
                            $('#faqBackupsModalData').html('<h5>Showing Backup: ' + table + '</h5>');

                            // Scroll to the table

                            $.ajax({
                                url: '/api/faq/backup/show',
                                type: 'POST',
                                data: { table: table },
                                success: function(result) {
                                    // Insert the data into the modal
                                    $('#faqBackupsModalData').append('<pre>' + JSON.stringify(result, null, 2) + '</pre>');

                                    // Open the modal
                                    $('#faqBackupsDataModal').show();
                                }
                            });
                        });
                    }
                });
            }

            // Call the function to refresh the table data initially
            refreshTableData();
        </script>
