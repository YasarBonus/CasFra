                document.getElementById('addFaqForm').addEventListener('submit', function(e) {
                    e.preventDefault();

                    const question = document.getElementById('newFaqQuestion').value;
                    const answer = document.getElementById('newFaqAnswer').value;
                    const sortingorder = document.getElementById('newFaqSortingorder').value;

                    $.ajax({
                        url: '/api/faq/add',
                        type: 'POST',
                        data: { question: question, answer: answer, sortingorder: sortingorder},
                        success: function(result) {
                            // Do something with the result
                            location.reload(); // Reload the page
                        }
                    });
                });

                document.getElementById('addFaqForm').addEventListener('cancel', function(e) {
                    e.preventDefault();

                    $('.ui.modal.faq').modal('hide');
                });
            </script>
